<Window x:Class="CSVViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="Auto">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Fichier">
                <MenuItem Header="_Ouvrir" Click="OpenFile"></MenuItem>
                <MenuItem Header="_Enregistrer" Click="Save"></MenuItem>
                <MenuItem Header="Enregistrer _sous..." Click="SaveAs"></MenuItem>
            </MenuItem>
            <MenuItem Header="_?">
                <MenuItem Header="_A propos" Click="About"></MenuItem>
                <MenuItem Header="_Debug" Click="Debug"></MenuItem>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="statusTB"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="infoTB" Text="" />
            </StatusBarItem>
        </StatusBar>

        <DataGrid Name="mainGrid" FontSize="13.333" EnableRowVirtualization="true" MaxWidth="1680">
        </DataGrid>

    </DockPanel>
</Window>
